<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.action.extension" value="action" />
	<package name="default" extends="struts-default">
		<!-- 测试 -->
		<action name="Test" class="com.wxggt.action.TestAction">
			<result name="success">/success.html</result>
		</action>
		<!-- 修改信息__头像 -->
		<action name="ChangeHeadFace" class="com.wxggt.action.ChangeHeadFaceAction">
			<result name="success">/view_teacher/sidebar/t_course.jsp</result>
		</action>
		<!-- 教师登陆 -->
		<action name="teacherlogin" class="com.wxggt.action.TeacherLoginAction">
		    <result name="login" type="redirect">/view_teacher/sidebar/t_course.jsp</result>
		    <result name="error" type="redirect">/error.html</result>
		</action>
		
		<action name="teacherRegist" class="com.wxggt.action.TeacherRegistAction">
		    <result name="regist" type="redirect">/view_teacher/register.jsp</result>
		    <result name="error" type="redirect">/error.html</result>
		</action>
		<!-- 老师修改信息 -->
		<action name="modifyInfo" class="com.wxggt.action.ModifyInfoAction">
		    <result name="modify" type="redirect">/view_teacher/resetInfo.jsp</result>
		    <result name="error" type="redirect">/error.html</result>
		</action>
	</package>
</struts>    
